= simple_form_for [:user, @campaign] do |f|

	- 3.times do
		= f.simple_fields_for :terms do |t|
			.row-fluid
				.span6
					= t.input :word, autocomplete: false, label: 'Enter Search Term'
				.span6
					= t.input :tone, collection: tones, label: 'Select a Tone (Optional)'

	%h2= f.submit 'Create Campaign', class: 'btn btn-success btn-large'
	
